@{
    ViewData["Title"] = "Home Page";
}

<div class="home-page text-center">
    <h1 class="display-4 welcome-heading">Welcome to:</h1>
    <img src="~/images/HearyBeatLogo.png" alt="Project Logo" class="center-image" />
    <p class="intro-text">HeartyBeatApp is your ultimate companion for daily challenges, tracking progress, and healthy tips to keep your heart happy and healthy!</p>

    <section class="features-section">
        <h2 class="section-title">--------------- Features ---------------</h2>
        <div class="features-container">
            <div class="feature-item" id="daily-challenges">
                <h3>( ˶ˆᗜˆ˵ ) <br /> Daily Challenges</h3>
                <p>Do daily challenges to keep yourself healthy and earn rewards!</p>
