@model HeartyBeat.Data.Tracker

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="mb-4">Delete Track?</h1>

    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HeartRate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HeartRate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Weight)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Weight)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Height)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Height)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Steps)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Steps)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-custom-create" />
                    <a asp-action="Index" class="btn btn-custom-back ml-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
