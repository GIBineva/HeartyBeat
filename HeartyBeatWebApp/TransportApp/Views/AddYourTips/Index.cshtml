@model IEnumerable<HeartyBeat.Data.AddYourTips>

@{
    ViewData["Title"] = "Add Your Tips";
}

<h1>Share your tips with other users!</h1>

<p>
    <a asp-action="Create" class="btn-custom-create">Create New</a>
</p>

<style>
    .chat-container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #f9f9f9;
        overflow-y: auto;
        height: 500px;
    }

    .chat-message {
        padding: 10px;
        margin: 10px 0;
        border-radius: 10px;
        background-color: #f2e6eb;
    }

        .chat-message .username {
            font-weight: bold;
        }

        .chat-message .tip {
            margin-top: 5px;
        }

    .btn-custom-create, .btn-custom-edit, .btn-custom-details, .btn-custom-delete {
        display: inline-block;
        padding: 8px 16px;
        margin: 5px 0;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        color: #fff;
    }

    
</style>

<div class="chat-container">
    @foreach (var item in Model)
    {
        <div class="chat-message">
            <div class="username">@Html.DisplayFor(modelItem => item.Username)</div>
            <div class="tip">@Html.DisplayFor(modelItem => item.TipFromUser)</div>
            <div>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-custom-edit">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn-custom-details">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-custom-delete">Delete</a>
            </div>
        </div>
    }
</div>