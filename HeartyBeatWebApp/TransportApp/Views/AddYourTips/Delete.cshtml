@model HeartyBeat.Data.AddYourTips

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this comment/tip?</h4>
    <p><strong>Username:</strong> @Html.DisplayFor(model => model.username)</p>
    <p><strong>Tip:</strong> @Html.DisplayFor(model => model.tipFromUser)</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-custom-create" />
    <a asp-action="Index" class="btn btn-custom-back ml-2">Back to List</a>
</form>
