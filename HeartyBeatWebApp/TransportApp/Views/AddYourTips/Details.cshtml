@model HeartyBeat.Data.AddYourTips

@{
    ViewData["Title"] = "Details";
}

<h1>Tip Details</h1>

<div class="details-container">
    <div class="detail-item">
        <strong>Username:</strong>
        <p>@Html.DisplayFor(model => model.Username)</p>
    </div>
    <div class="detail-item">
        <strong>Tip:</strong>
        <p>@Html.DisplayFor(model => model.TipFromUser)</p>
    </div>
</div>
<br />
<br />

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-custom-create">Edit</a>
    <a asp-action="Index" class="btn btn-custom-back ml-2">Back to List</a>
</div>

<style>
    .details-container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    .detail-item {
        margin-bottom: 15px;
    }

        .detail-item p {
            margin: 0;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #fff;
        }
</style>
